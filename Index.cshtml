@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-4">
    <div class="row p-3">
        <div class=" col-6">
            <h2 class="text-primary">Categories</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-Secondry" asp-action="Create" asp-controller="Category"><i class="bi bi-plus-circle-fill"></i>&nbsp;Create New Category</a>
        </div>   
    </div>
 </div>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>

       <h1>List Of Categories</h1>
    <tr>
        <th>
            Category Name
        </th>
        <th>
            Display Order
        </th> 
        <th>
           Update/Delete
        </th>
    </tr>
    
@foreach(var item in Model)
{
    <tr>
        <td>
            @item.Name
        </td>
        <td>
            @item.DisplayOrder
        </td>
        <td role="group">
            <a asp-action="Edit" asp-controller="category" asp-route-id="@item.Id"><i class="bg-info bi-pencil-square"></i></a>
            <a asp-action="Delete" asp-controller="category" asp-route-id="@item.Id"><i class="bi bi-trash"></i></a>
        </td>
    </tr>
}
    </thead>
</table>