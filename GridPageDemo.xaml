<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.GridPageDemo"
             Title="NewPage1">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>    
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Button Text="Click One" FontSize="Medium"  FontAttributes="Bold" Grid.Row="0" Grid.Column="0" HeightRequest="100" Grid.ColumnSpan="2"/>
        <Button Text="Click Second" FontSize="Medium" FontAttributes="Bold" Grid.Row="0" Grid.Column="1" HeightRequest="100"/>
    </Grid>
</ContentPage>